@model IEnumerable<dynamic>
@{
    ViewBag.Title = "Index";
}

<h2>Products</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
        </tr>
    }
    </tbody>
</table>


<a href="@Url.Action("Add", "Product")" class="btn"><i class="icon-plus"></i> Add product</a>