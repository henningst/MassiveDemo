@model IEnumerable<dynamic>  /* <-- List of dynamic objects (ExpandoObjects) */

<h2>Products</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td> 
            <td>@product.Description</td>
            <td style="text-align: right;">
                @Html.ActionLink("Delete", "Delete", "Product", new { Id=@product.Id }, null)
            </td>
        </tr>
    }
    </tbody>
</table>


<a href="@Url.Action("Add", "Product")" class="btn"><i class="icon-plus"></i> Add product</a>